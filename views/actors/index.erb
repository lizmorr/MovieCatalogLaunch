<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Movie Catalogue Deluxe: Actors  </title>

    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="css/foundation.min.css" />
    <link rel="stylesheet" href="css/home.css" />
    <script src="js/vendor/modernizr.js"></script>
  </head>


  <body>
    <div class="row header">
      <div class="small-10 small-centered column">
        <h2>All the actors we know!</h2>
      </div>
    </div>
    <div class="row" id="actor_body">
      <div class="small-10 small-centered column">
        <table>
          <thead>
            <tr>
              <th>Actor Name</th>
              <th>Number of Appearances</th>
            </tr>
          </thead>

          <tbody>
            <% actors.each do |actor| %>
              <tr>
                <td><a href="/actors/<%=actor["name"]%>" ><%= actor["name"] %></a></td>
                <td><%= actor["movie_count"]%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <p><a href="/actors?page=<%= ((params["page"].to_i)-1) %>">
      Previous 20
    </a></p>
    <p><a href="/actors?page=<%= ((params["page"].to_i)+1) %>">
      Next 20
    </a></p>


    <script src="js/vendor/jquery.js"></script>
    <script src="js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
